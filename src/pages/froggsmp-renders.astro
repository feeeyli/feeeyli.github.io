---

<Layout title="Projetos | FroggSMP Renders">
  <main class="flex min-h-screen flex-col items-center pb-16 pt-4 gap-8">
    <header class="w-full px-4 sticky top-0">
      <a href="/" class="flex items-center gap-2 group h-10 w-10"><ArrowLeft size="1rem" class="group-hover:-translate-x-0.5 transition-transform"/></a>
    </header>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 max-w-3xl">
      {RENDERS.map((group, index) => (
        <div class:list={["grid grid-cols-2 gap-4 [grid-template-areas:'a_a''b_c']", {"md:[grid-template-areas:'b_c''a_a']": index % 2 === 1}]}>
          {group.map(render => (
            <img
              src={`/renders/uniques/${render.name}.png`}
              alt={"Render de " + render.display_name}
              style={`background-color:${render.background};`}
              class:list={["render", {"[grid-area:a]": render.expand}]} 
            />
          ))}
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
.render {
  aspect-ratio: 1 / 1;
  transition: transform 0.2s ease-out;
}

.render.--size-2 {
  grid-row: span 2 / span 2;
  grid-column: span 2 / span 2;
}

.render.--size-4 {
  grid-column: span 4 / span 4;
  aspect-ratio: 4 / 1.5;
}
</style>