import Layout from "../layouts/Layout.astro";

type Render = {
  name: string;
  display_name: string;
  background: `#${string}`;
  expand?: boolean;
}

const RENDERS: Render[][] = [
  [
    { display_name: "Scott", name: "scott", background: "#d7887b", expand: true },
    {display_name: "Yui", name: "yui", background: "#b45046"},
    {display_name: "Rafly", name: "rafly", background: "#e3776b"}
  ],
  [
    { display_name: "Amelie", name: "amelie", background: "#8bc6fe", expand: true },
    {display_name: "Yumi e Enderson", name: "yumi_enderson", background: "#61aab8"},
    {display_name: "Yna", name: "yna", background: "#afd9ef"}
  ],
  [
    { display_name: "√Åries", name: "aries", background: "#9eaf83", expand: true },
    {display_name: "Akino", name: "akino", background: "#da616f"},
    {display_name: "Frogg", name: "frogg", background: "#84b66d"}
  ],
  [
    { display_name: "Myn", name: "myn", background: "#f6e3e5", expand: true },
    {display_name: "Guaxi", name: "guaxi", background: "#E1CBDC"},
    {display_name: "Umild", name: "umild", background: "#6E98CE"}
  ],
  [
    { display_name: "Yume", name: "yume", background: "#e07182", expand: true },
    {display_name: "Keller", name: "keller", background: "#6c5545"},
    { display_name: "Akino (detetive)", name: "akino_detetive", background: "#a38a74"}
  ],
  [
    { display_name: "Pierre", name: "pierre", background: "#b3b9fe", expand: true },
    {display_name: "Flopi", name: "flopi", background: "#ffdd89"},
    {display_name: "Ameizim", name: "ameizim", background: "#dc864d"}
  ]
