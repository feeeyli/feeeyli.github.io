---
import { BarChart2, Bookmark, Heart, MessageCircle, Repeat2, Share } from "lucide-astro";

interface Props {
	post: {
    content: string;
    stats: {
      comments: number;
      reposts: number;
      likes: number;
      views: number;
    };
    has_reply: boolean;
    images: string[]
    link?: string;
  };
}

const { post: { content, stats, has_reply, images, link } } = Astro.props;

function nFormatter(num: number, digits: number) {
  const lookup = [
    { value: 1, symbol: "" },
    { value: 1e3, symbol: "mil" },
    { value: 1e6, symbol: "M" },
    { value: 1e9, symbol: "G" },
    { value: 1e12, symbol: "T" },
    { value: 1e15, symbol: "P" },
    { value: 1e18, symbol: "E" }
  ];
  const regexp = /\.0+$|(?<=\.[0-9]*[1-9])0+$/;
  const item = lookup.findLast(item => num >= item.value);
  return item ? (num / item.value).toFixed(digits).replace(regexp, "").concat(" ").concat(item.symbol) : "0";
}
